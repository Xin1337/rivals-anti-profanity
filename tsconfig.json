{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "jsx": "react-jsx",
      "outDir": "./dist",
      "strict": true,
      "removeComments": true,
      "allowJs": true,
      "checkJs": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "lib": ["dom", "dom.iterable", "esnext"]
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }